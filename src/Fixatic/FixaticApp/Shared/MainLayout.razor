@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@_isDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <CascadingValue Value="@_isDarkMode" Name="DarkMode">
        <CascadingValue Value="@SwitchMode" Name="ToggleDarkMode">
            @if (_currentUser != null)
            {
                <CascadingValue Value="@_currentUser" Name="CurrentUser">
                    @Body
                </CascadingValue>
            }
        </CascadingValue>
    </CascadingValue>
</MudLayout>
