@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@_isDarkMode" />
<MudSnackbarProvider />

<MudDialogProvider
    Position="DialogPosition.Center"
    CloseOnEscapeKey="true"
/>

<MudLayout>
    <CascadingValue Value="@_isDarkMode" Name="DarkMode">
        <CascadingValue Value="@SwitchMode" Name="ToggleDarkMode">
            @Body
        </CascadingValue>
    </CascadingValue>
</MudLayout>
