@inherits LayoutComponentBase
@layout MainLayout
@* Layout for the login page without the appbar / sidebar *@

<MudAppBar Elevation="1">
    <MudButton Href="/" Variant="Variant.Text" Color="Color.Inherit">
        <MudText Typo="Typo.h5" Color="Color.Inherit">
            Fixatic
        </MudText>
    </MudButton>

    <MudSpacer />
    <MudButton Href="/login" Variant="Variant.Text" StartIcon="@Icons.Filled.Login" Color="Color.Inherit">Login</MudButton>
    <MudTooltip Text="@(DarkMode ? "Switch to Light Theme" : "Switch to Dark Theme")">
        <MudIconButton Icon="@(DarkMode? @Icons.Rounded.LightMode : @Icons.Material.Outlined.DarkMode)" Color="Color.Inherit" OnClick="@ToggleDarkMode" />
    </MudTooltip>
</MudAppBar>
<MudMainContent>
    <MudContainer>
        @Body
    </MudContainer>
</MudMainContent>

@code {
    [CascadingParameter(Name = "DarkMode")]
    public bool DarkMode { get; set; }

    [CascadingParameter(Name = "ToggleDarkMode")]
    public Action ToggleDarkMode { get; set; }
}