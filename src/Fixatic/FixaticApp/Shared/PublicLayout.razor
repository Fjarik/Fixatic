<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Fixatic</MudText>
        <MudSpacer />
        <MudButton Href="/login" Variant="Variant.Text" StartIcon="@Icons.Filled.Login" Color="Color.Inherit">Login</MudButton>
