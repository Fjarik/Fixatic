<MudDialog>
    <DialogContent>
        <MudSelect @bind-Value="SelectedUser">
            @*Ten if je tu potřeba. Z nějakého důvodu je Users null, i když to nastavuju v OnInitializedAsync()...*@
            @if (Users != null)
            {
                @foreach (var user in Users)
                {
                    <MudSelectItem Value="@user"></MudSelectItem>
                }
            }
        </MudSelect>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel">Cancel</MudButton>

        @if (SelectedUser != null)
        {
            <MudButton Color="Color.Primary" OnClick="@SubmitAsync">Ok</MudButton>
        }
    </DialogActions>
</MudDialog>