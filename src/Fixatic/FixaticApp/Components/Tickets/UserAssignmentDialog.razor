<MudDialog>
    <DialogContent>
        @if (SelectedUserId > 0)
        {
            <MudSelect @bind-Value="SelectedUserId">
                @foreach (var user in Users)
                {
                    <MudSelectItem Value="@user.UserId">
                        @user.Firstname @user.Lastname
                    </MudSelectItem>
                }
            </MudSelect>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel">Cancel</MudButton>

        @if (SelectedUserId > 0)
        {
            <MudButton Color="Color.Primary" OnClick="@SubmitAsync">Ok</MudButton>
        }
    </DialogActions>
</MudDialog>