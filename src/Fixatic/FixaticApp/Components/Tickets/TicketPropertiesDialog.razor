<MudDialog>
    <DialogContent>
        @foreach (var property in _properties)
        {
            <MudText Typo="Typo.h6">
                @property.Value.Name
            </MudText>
            <MudText Typo="Typo.subtitle1">
                @property.Value.Description
            </MudText>
            <MudTreeView T="string" MultiSelection="true">
                @foreach (var option in property.Options)
                {
                    <MudTreeViewItem Value="@option.Value.Content" Selected="@option.IsSelected"
                             Disabled="@(!option.Value.IsEnabled)"
                             SelectedChanged="@(() => SelectedChanged(option))" />
                }
            </MudTreeView>
        }
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="@Close">Ok</MudButton>
    </DialogActions>
</MudDialog>